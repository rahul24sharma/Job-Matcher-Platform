# backend/.env.example

# Environment
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://resumehithub:password@localhost:5432/resume_hithub
POSTGRES_USER=resumehithub
POSTGRES_PASSWORD=password
POSTGRES_DB=resume_hithub

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (Optional)
ADZUNA_APP_ID=
ADZUNA_APP_KEY=

# GitHub API (Optional)
GITHUB_TOKEN=

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@resume-hithub.com

# Flower Authentication (Optional)
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# Sentry (Optional - for error tracking)
SENTRY_DSN=

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_JOB_SCRAPING=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
GITHUB_RATE_LIMIT_PER_HOUR=10

# Logging
LOG_LEVEL=INFO